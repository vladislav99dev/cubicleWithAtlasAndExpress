<main>
  <main>
    <h1>{{name}}</h1>
    <img class="cube" src="{{imageUrl}}" alt="subeImg">
    <div class="details">
      <p><span>Description:</span>{{description}}</p>
      <p><span>Difficulty level:</span> {{difficulty}}</p>
      <a class="btn" href="/">Back</a>
      <a class="btn" href="/cube/attachAccessory/{{_id}}">Attach Accessory</a>

    </div>
  </main>
  <h2>Accessories</h2>
  <div class="accessories">
    {{#each accessories}}
    <div class="accessory">
      <img src="{{imageUrl}}" alt="Image of the acessory">
      <h3>{{this.name}}</h3>
      <p>{{this.description}}</p>
    </div>
    {{/each}}

    <h3 class="italic">This cube has no accessories yet...</h3>
  </div>
</main>


